<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_android_black_24dp</item>
<!--        <item name="android:background">@color/white</item>-->
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="Theme.MyAppProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->


        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SubmitButtonFilled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_filled</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="cb_textFont">bold</item>
        <item name="cb_type">filled</item>
    </style>
    <style name="SubmitButtonOutLined" parent="SubmitButtonFilled">
        <item name="android:background">@drawable/bg_btn_outlined</item>
        <item name="android:textColor">@color/purple_900</item>
        <item name="cb_type">outlined</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>